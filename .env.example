# SoulLens.AI Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# === AI CONFIGURATION ===
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_ANTHROPIC_API_KEY_HERE
CLAUDE_API_KEY=sk-ant-api03-YOUR_ANTHROPIC_API_KEY_HERE
NEXT_PUBLIC_CLAUDE_API_KEY=sk-ant-api03-YOUR_ANTHROPIC_API_KEY_HERE

# === SUPABASE CONFIGURATION ===
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_SUPABASE_PROJECT_URL.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE

# === STRIPE CONFIGURATION ===
# Development Keys (use for testing)
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET_HERE
NEXT_PUBLIC_STRIPE_PRICE_ID=price_YOUR_STRIPE_PRICE_ID_HERE

# Production Keys (use for live deployment)
# STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY_HERE
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY_HERE

# === APP CONFIGURATION ===
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_DOMAIN=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# === AUTHENTICATION ===
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# === ANALYTICS (OPTIONAL) ===
# GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
# MIXPANEL_TOKEN=your_mixpanel_token_here

# === DEPLOYMENT SPECIFIC ===
# For production deployment, change these to production URLs
# NEXT_PUBLIC_DOMAIN=https://www.mysoullens.com
# NEXT_PUBLIC_SITE_URL=https://www.mysoullens.com
# NEXT_PUBLIC_API_URL=https://www.mysoullens.com/api
